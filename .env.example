# This file contains the environment variables that the application uses

# Application Info
APP_NAME=Your-App-Name
APP_DESCRIPTION=Your-App-Description
APP_VERSION=1.0.0

# Flask Environment
FLASK_ENV=development  # Options: production, development, test

# Database Configuration
# Replace placeholders with actual database URI
SQLALCHEMY_DATABASE_URI=postgresql://username:password@localhost:5432/your_database_name
SQLALCHEMY_DATABASE_URI_TEST=sqlite:///:memory:

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key  # Replace with a strong secret key

# JWT Token Expiry Settings (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=1800  # 30 minutes
JWT_REFRESH_TOKEN_EXPIRES=86400  # 24 hours

# JWT Blocklist Settings
JWT_BLOCKLIST_ENABLED=True  # Options: True, False
